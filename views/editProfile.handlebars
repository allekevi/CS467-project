<div class="container">
    <h2>Edit profile</h2>
    <form id="edit-profile" action="/userHome/editProfile" method="POST">
        <div class="form-group">
            <div class="col-4">
                <label for="fName">First Name</label>
                <input type="text" class="form-control" name="first_name" placeholder="First Name" value="{{user.first_name}}">
            </div>
        </div>
        <div class="form-group">
            <div class='col-4'>
                <label for="lName">Last Name</label>
                <input type="text" class="form-control" name="last_name" placeholder="Last Name" value="{{user.last_name}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-4">
                <label for="userEmail">Email Address</label>
                <input type="email" class="form-control" name="email" placeholder="email" value="{{user.email}}">
            </div>
        </div>
        <div class="form-group">
            <div class='col-4'>
                <label for="cPassword">Change Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" value="{{user.password}}">
                <label for="conPassword">Confirm Password</label>
                <input type="password" class="form-control" id="conPassword" placeholder="Confirm Password" value="{{user.password}}">
            </div>
        </div>
        <div>
            <label for="sigImg">Current Signature</label>
            <img src='./public/sigs' class='img-thumbnail'>
        </div>
        <div class="form-group">
            <label for="sigSub">Upload new Signature</label>
            <input type="file" class="form-control-file" id="sigSub">
        </div>
        
    </form>
    <button class="btn btn-primary" onclick="editUser({{user.user_id}})">Submit Changes</button> 
    <a class="btn btn-primary" href="/userHome" role="button">Cancel</a>
</div>
